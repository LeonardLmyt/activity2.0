page{width: 100%;height: 100%;}
.main_map{width: 100%;height: 100%;overflow: hidden;}
.main_map map{width: 100%;height: calc(100% - 115rpx);height: -webkit-calc(100% - 115rpx);position: relative;}
.content{position: fixed;top: 0;left: 0;right: 0;bottom: 0;width: 100%;height: 100%;overflow: hidden;background-color: #F4F4F4;z-index: 100;transform: translateX(100%);-webkit-transform: translateX(100%);}
.swiper{width: 100%;height: 100%;}
.content_header{box-sizing: border-box;-webkit-box-sizing: border-box;display:-webkit-box;display:box;width: 100%;height: 80rpx;-webkit-box-align: center;box-align: center;padding: 0 4%;background-color: #fff;margin-bottom: 8rpx;}
.header_close{width: 50rpx;height: 50rpx;}
.header_time{-webkit-box-flex: 1.0;box-flex: 1.0;text-align:right;color:#99999A;font-size: 0.8em;height: 80rpx;line-height: 80rpx;margin-right: 20rpx;}
.header_trash{width: 50rpx;height: 50rpx;}
.message{box-sizing: border-box;-webkit-box-sizing: border-box;width: 100%;overflow: hidden;background-color: #fff;padding: 0 4% 10rpx 4%;}
.message_header{display:-webkit-box;display:box;width: 100%;overflow: hidden;height: 120rpx;-webkit-box-align: center;box-align: center;}
.message_header image{width: 80rpx;height: 80rpx;}
.message_header view{color:#2F3235;-webkit-box-flex: 1.0;box-flex: 1.0;margin-left: 20rpx;}
.message_content{display: -webkit-box;display: box;width: 100%;max-height: 205rpx;color:#2F3235;font-size: 0.8em;overflow: hidden;text-overflow: ellipsis;-webkit-line-clamp: 5;-webkit-box-orient: vertical;word-break: break-word;}
.message_img{width: 100%;overflow:hidden;margin-top: 15rpx;}
.message_img_sub_one{width: 100%;overflow:hidden;}
.img_sub_one{width: 32%;height: 161rpx;float:left;margin-right: 2%;margin-bottom: 15rpx;}
.img_sub_one:last-child{margin-right: 0;}
.img_sub_one image{box-sizing: border-box;-webkit-box-sizing: border-box;border:1rpx solid #ddd;width: 100%;height: 161rpx;}
.message_img_sub_two{width: 100%;overflow:hidden;}
.message_img_sub_two image{width: 100%;height: 503rpx;}
.message_img_sub_three{float: left;width: 49%;height: 246rpx;overflow:hidden;}
.message_img_sub_three:first-child{margin-right: 2%;}
.message_img_sub_three image{width: 100%;height: 246rpx;}
.message_img_sub_four{float: left;width: 49%;height: 246rpx;overflow:hidden;margin-right: 2%;margin-bottom: 13.8rpx;}
.message_img_sub_four:nth-child(2n){margin-right: 0;}
.message_img_sub_four image{width: 100%;height: 246rpx;}

.operate{box-sizing: border-box;-webkit-box-sizing: border-box;display: -webkit-box;display: box;width: 100%;overflow: hidden;background-color: #fff;border-top:1rpx solid #F4F4F4;height: 120rpx;-webkit-box-align: center;box-align: center;padding: 0 3%;}
.location{width: 60rpx;height: 60rpx;margin-right:10rpx;}
.address{-webkit-box-flex: 1.0;box-flex: 1.0;color: #666666;font-size: 0.8em;}
.address view{width: 100%;overflow:hidden;text-overflow: ellipsis;white-space: nowrap;}
.operate_praise{display: -webkit-box;display: box;-webkit-box-flex-group: 2;box-flex-group: 2;-webkit-box-align: center;box-align: center;}
.operate_praise_img{width: 60rpx;height: 60rpx;}
.operate_praise_num{color: #666666;font-size: 0.8em;margin-left: 10rpx;}
.next{width: 100%;overflow: hidden;}
.next image{display: block;width: 100rpx;height: 100rpx;margin: 20rpx auto 0;}

/*footer*/
.footer_tab:nth-child(3) view:first-child{background-image: url(data:image/png;base64,)}
.footer_tab:nth-child(3) view:last-child{color:#4585FF;}